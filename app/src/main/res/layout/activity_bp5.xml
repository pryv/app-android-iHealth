<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Button
        android:id="@+id/btn_getbattery"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:text="Getbattery"
        android:onClick="getBattery"
        android:visibility="gone"/>

    <Button
        android:id="@+id/btn_isOfflineMeasure"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:text="IsOfflineMeasure"
        android:onClick="isOfflineMeasure"
        android:visibility="gone"/>

    <Button
        android:id="@+id/btn_enableOfflineMeasure"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:text="EnableOfflineMeasure"
        android:onClick="enableOfflineMeasure"
        android:visibility="gone"/>

    <Button
        android:id="@+id/btn_disableOfflineMeasure"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:text="DisableOfflineMeasure"
        android:onClick="disableOfflineMeasure"
        android:visibility="gone"/>

    <Button
        android:id="@+id/btn_startMeasure"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:text="StartMeasure"
        android:onClick="startMeasure"/>

    <Button
        android:id="@+id/btn_stopMeasure"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:text="StopMeasure"
        android:onClick="stopMeasure"/>

    <TextView
        android:id="@+id/tv_return"
        android:layout_width="fill_parent"
        android:layout_height="150dp" />

</LinearLayout>