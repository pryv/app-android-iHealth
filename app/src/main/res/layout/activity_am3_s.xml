<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Button
        android:id="@+id/btn_GetBattery"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:text="getBattery"
        android:onClick="getBattery"/>
    
    <Button
        android:id="@+id/btn_GetUserId"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:text="getUserId"
        android:onClick="getUserId"/>
    
    <Button
        android:id="@+id/btn_GetAlarmNum"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:text="getAlarnNum"
        android:onClick="getAlarmNum"/>
    
    <Button
        android:id="@+id/btn_SyncStage"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:text="syncStage"
        android:onClick="syncStage"/>
    
    <Button
        android:id="@+id/btn_SyncSleep"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:text="syncSleep"
        android:onClick="syncSleep"/>
    
    <Button
        android:id="@+id/btn_SyncActivity"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:text="syncActivity"
        android:onClick="syncActivity"/>
    
    <Button
        android:id="@+id/btn_SyncReal"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:text="syncReal"
        android:onClick="syncReal"/>
    
    <Button
        android:id="@+id/btn_GetUserInfo"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:text="getUserInfo"
        android:onClick="getUserInfo"/>
    
    <Button
        android:id="@+id/btn_GetAlarmInfo"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:text="getAlarmInfo"
        android:onClick="getAlarmInfo"/>
    
    <Button
        android:id="@+id/btn_SetUserId"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:text="setUserId"
        android:onClick="setUserId"/>
    
   <Button
        android:id="@+id/btn_SendRandom"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:text="sendRandom"
       android:onClick="sendRandom"/>

    <TextView
        android:id="@+id/tv_return"
        android:layout_width="fill_parent"
        android:layout_height="150dp" />
  
</LinearLayout>