<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Button
        android:id="@+id/btn_GetBattery"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:text="Get battery"
        android:onClick="getBattery"/>
    
    <Button
        android:id="@+id/btn_GetUserId"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:text="Get user id"
        android:onClick="getUserId"/>
    
    <Button
        android:id="@+id/btn_GetAlarmNum"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:text="Get alarm num"
        android:onClick="getAlarmNum"/>
    
    <Button
        android:id="@+id/btn_SyncStage"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:text="Sync stage"
        android:onClick="syncStage"/>
    
    <Button
        android:id="@+id/btn_SyncSleep"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:text="Sync sleep"
        android:onClick="syncSleep"/>
    
    <Button
        android:id="@+id/btn_SyncActivity"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:text="Sync activity"
        android:onClick="syncActivity"/>
    
    <Button
        android:id="@+id/btn_SyncReal"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:text="Sync real"
        android:onClick="syncReal"/>
    
    <Button
        android:id="@+id/btn_GetUserInfo"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:text="Get user age"
        android:onClick="getUserInfo"/>
    
    <Button
        android:id="@+id/btn_GetAlarmInfo"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:text="Get alarm info"
        android:onClick="getAlarmInfo"/>
    
    <Button
        android:id="@+id/btn_SetUserId"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:text="Set user id"
        android:onClick="setUserId"/>
    
   <Button
        android:id="@+id/btn_SendRandom"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:text="Send random"
       android:onClick="sendRandom"/>

    <TextView
        android:id="@+id/tv_return"
        android:layout_width="fill_parent"
        android:layout_height="150dp" />

</LinearLayout>