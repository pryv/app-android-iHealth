<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:gravity="right"
            android:text="@string/bluetooth_devicelist_dialog_ssid"
            android:textColor="#CCCCCC"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/btSetWiFi_tv_SSID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/textView1"
            android:ems="10"
            android:textColor="#CCCCCC"
            android:textSize="16dp" >
        </TextView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:visibility="gone" >

        <TextView
            android:id="@+id/text11111"
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:gravity="right"
            android:text="@string/bluetooth_devicelist_dialog_type"
            android:textColor="#CCCCCC"
            android:textSize="16dp"
            android:visibility="gone" />

        <Spinner
            android:id="@+id/btSetWiFi_spn_WiFiSecuType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/text11111"
            android:ems="10"
            android:textColor="#000000"
            android:textSize="16dp"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp" 
        android:layout_marginRight="50dp">

        <TextView
            android:id="@+id/textpsw11"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:gravity="right"
            android:text="@string/bluetooth_devicelist_dialog_password"
            android:textColor="#CCCCCC"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/btSetWiFi_et_Pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/textpsw11"
            android:inputType="textPassword"
            android:textColor="#000000"
            android:textSize="16dp" />
    </RelativeLayout>

</LinearLayout>