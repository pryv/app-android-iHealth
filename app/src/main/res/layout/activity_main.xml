<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ihealth.activities.MainActivity" >
    
    <Button
        android:id="@+id/btn_discoveryAM3S"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Discovery AM3S Device"
        android:onClick="discoveryAM3S"
        android:visibility="gone"/>

    <Button
        android:id="@+id/btn_discoveryBP5"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Discover Blood Pressure Monitor (BP5)"
        android:onClick="discoveryBP5"/>

    <Button
        android:id="@+id/login"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/login"/>


</LinearLayout>