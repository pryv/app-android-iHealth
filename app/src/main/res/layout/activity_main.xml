        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:text="Device Scan"
        android:textSize="20sp" />

    <ListView
        android:id="@+id/list_scan"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

