<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.helloworld.MainActivity" >

    <TextView 
        android:id="@+id/tv_discovery"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>
    
    <Button
        android:id="@+id/btn_discoveryAM3S"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Discovery AM3S Device" />

    <Button
        android:id="@+id/btn_discoveryBP5"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Discovery BP5 Device" />

    <Button
        android:id="@+id/btn_stopdiscovery"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Stop Discovery" />

    <Button
        android:id="@+id/btn_Certification"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Certification" />

