<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ch.epfl.lsi.ironICpp"
    android:versionCode="1"
    android:versionName="1.0" >

    <!-- Specify the API Level -->
    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="21" />

    <!-- Bluetooth permission -->
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <!-- External storage permission -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <!-- Application features -->
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:persistent="false" >

        <!-- StartActivity features -->
        <activity
            android:name="ch.epfl.lsi.ironICpp.StartActivity"
            android:launchMode="singleTop"
            android:theme="@style/CustomActionBarTheme" >
              <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- MonitoringActivity features -->
        <activity
            android:name="ch.epfl.lsi.ironICpp.MonitoringActivity"
            android:launchMode="singleTop"
            android:theme="@style/CustomActionBarTheme" >
        </activity>

        <!-- ChartActivity features -->
        <activity
            android:name="ch.epfl.lsi.ironICpp.ActivityChart"
            android:launchMode="singleTop"
            android:theme="@style/CustomActionBarTheme" >
        </activity>

        <!-- ChipParametersActivity features -->
        <activity
            android:name="ch.epfl.lsi.ironICpp.ChipParametersActivity"
            android:launchMode="singleTop"
            android:theme="@style/CustomActionBarTheme"
            android:screenOrientation="portrait" >
        </activity>
        
        <!-- TestParameterChartActivity features -->
        <activity
            android:name="ch.epfl.lsi.ironICpp.TestParameterChartActivity"
            android:launchMode="singleTop"
            android:theme="@style/CustomActionBarTheme" 
            android:screenOrientation="landscape">
        </activity>

        <!-- CalibrationActivity features -->
        <activity
            android:name="ch.epfl.lsi.ironICpp.CalibrationActivity"
            android:launchMode="singleTop"
            android:theme="@style/CustomActionBarThemeCalibration"
            android:screenOrientation="portrait" >
        </activity>

        <!-- DeviceListActivity features -->
        <activity
            android:name="ch.epfl.lsi.ironICpp.ActivityDeviceList"
            android:launchMode="singleTop" >
        </activity>

        <!-- Services -->
        <service
            android:name="ch.epfl.lsi.ironICpp.DataService"
            android:process=":DataService" />
    </application>

</manifest>