<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/introduction"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:background="@drawable/action_bar_back"
            android:gravity="center"
            android:text="@string/start_text"
            android:textColor="@color/white"
            android:textSize="35sp"
            android:textStyle="italic" />

        <CheckBox
            android:id="@+id/checkbox_metab1"
            style="@style/CheckBox"
            android:layout_marginTop="50dp"
            android:layout_weight="1"
            android:text="@string/checkbox_metab1" />

        <CheckBox
            android:id="@+id/checkbox_metab2"
            style="@style/CheckBox"
            android:layout_weight="1"
            android:text="@string/checkbox_metab2" />

        <CheckBox
            android:id="@+id/checkbox_metab3"
            style="@style/CheckBox"
            android:layout_weight="1"
            android:text="@string/checkbox_metab3" />

        <CheckBox
            android:id="@+id/checkbox_metab4"
            style="@style/CheckBox"
            android:layout_weight="1"
            android:text="@string/checkbox_metab4" />

        <CheckBox
            android:id="@+id/checkbox_metab5"
            style="@style/CheckBox"
            android:layout_weight="1"
            android:text="@string/checkbox_metab5" />

        <CheckBox
            android:id="@+id/checkbox_metab6"
            style="@style/CheckBox"
            android:layout_weight="1"
            android:text="@string/checkbox_metab6" />

        <CheckBox
            android:id="@+id/checkbox_metab7"
            style="@style/CheckBox"
            android:layout_weight="1"
            android:text="@string/checkbox_metab7" />

        <TextView
            android:id="@+id/minutes"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:background="@drawable/action_bar_back"
            android:gravity="center"
            android:text="@string/minutes"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="italic" />

        <NumberPicker
            android:id="@+id/numberPicker1"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:layout_weight="1"
            android:background="#CD7F32"
            android:orientation="horizontal" />

        <TextView
            android:id="@+id/rowtext"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dip"
            android:layout_weight="1"
            android:background="@drawable/action_bar_back"
            android:gravity="center"
            android:text="@string/Calibration_prompt"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="italic" />

        <Spinner
            android:id="@+id/spinner0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="#CD7F32"
            android:gravity="center"
            android:prompt="@string/Calibration_prompt" />

        <Spinner
            android:id="@+id/spinner1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="#CD7F32"
            android:gravity="center"
            android:prompt="@string/Calibration_prompt" />

        <Spinner
            android:id="@+id/spinner2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="#CD7F32"
            android:gravity="center"
            android:prompt="@string/Calibration_prompt" />

        <Spinner
            android:id="@+id/spinner3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="#CD7F32"
            android:gravity="center"
            android:prompt="@string/Calibration_prompt" />

        <Spinner
            android:id="@+id/spinner4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="#CD7F32"
            android:gravity="center"
            android:prompt="@string/Calibration_prompt" />

        <Spinner
            android:id="@+id/spinner5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="#CD7F32"
            android:gravity="center"
            android:prompt="@string/Calibration_prompt" />

        <Spinner
            android:id="@+id/spinner6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="#CD7F32"
            android:gravity="center"
            android:prompt="@string/Calibration_prompt" />

        <LinearLayout
            android:id="@+id/layoutbutton"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" >

            <Button
                android:id="@+id/Btn_Calibration"
                style="@style/btnStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:drawableLeft="@drawable/icon_lock"
                android:gravity="center"
                android:onClick="showLoginDialog"
                android:text="@string/button_security"
                android:textColor="#2F2F2F"
                android:textSize="20sp" />

            <Button
                android:id="@+id/Btn_Start"
                style="@style/btnStyle"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:onClick="runActivityChart"
                android:text="@string/button_start"
                android:textColor="#7B1B02"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>